<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="ogmen_bot" args="right_wheel_joint_position_controller left_wheel_joint_position_controller joint_state_controller "/>
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
  <remap from="/joint_states" to="/ogmen_bot/joint_states"/>
</node>

</launch>